{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "ES6",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "rootDir": "./src",
    "outDir": "dist",
    "jsx": "react-jsx"
  },
  "include": ["./src/**/*"],
  "exclude": ["./public/**/*"]
}
